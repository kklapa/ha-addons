---
# Розширюємо базові правила yamllint
extends: default

# Файли/шляхи, які ігноруються
ignore: |
  */translations/*.yaml
  */config.yaml
  */config.yml

# Основні правила
rules:
  indentation:
    level: error
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false
  line-length:
    level: warning
    max: 120
  trailing-spaces:
    level: error
  new-lines:
    level: error
    type: unix
  document-start:
    level: error
    present: true
  document-end:
    level: error
    present: false
  empty-lines:
    level: error
    max: 1
    max-start: 0
    max-end: 1
  key-duplicates:
    level: error
